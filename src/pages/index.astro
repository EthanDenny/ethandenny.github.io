---
import BaseLayout from "../layouts/BaseLayout.astro";
import NewTab from "../components/NewTab.astro";
import ContactLink from "../components/ContactLink.astro";
import EnvelopeIcon from "phosphor-astro/Envelope.astro";
import FileIcon from "phosphor-astro/File.astro";
import GithubIcon from "phosphor-astro/GithubLogo.astro";
import LinkedInIcon from "phosphor-astro/LinkedinLogo.astro";

import "../styles/global.css";

const musicLink =
  "https://music.apple.com/ca/playlist/ten-really-good-songs/pl.u-V9D7mX9hBKWDNE7";
const gamesLink = "https://steamcommunity.com/id/thedenny709";
const githubLink = "https://github.com/EthanDenny/";

const workLink = "https://www.spellbook.legal/";
const schoolLink = "https://www.mun.ca/";
const sandboxLink = "https://github.com/EthanDenny/sandbox";
const vacLabLink =
  "https://www.linkedin.com/posts/ethan-denny-709_machinelearning-computerscience-python-activity-7071956327891095552-Awnm";
const ffRustLink =
  "https://www.linkedin.com/posts/ethan-denny-709_im-happy-to-share-that-in-addition-to-my-activity-7200540631662772224-JMbU?utm_source=share&utm_medium=member_desktop";
---

<BaseLayout title={"Home"}>
  <div class="flex flex-col gap-4">
    <div class="text-block">
      {"I like"}
      <NewTab href={githubLink}>building software</NewTab>{", listening to"}
      <NewTab href={musicLink}>music</NewTab>{", and playing"}
      <NewTab href={gamesLink}>games</NewTab>{"."}
    </div>
    <div class="text-block">
      {"Right now, I'm building AI for lawyers as a software developer at"}
      <NewTab href={workLink}>Spellbook</NewTab>{
        ". I'm also pursuing my bachelor's degree in computer science at"
      }
      <NewTab href={schoolLink}>MUN</NewTab>{
        ", where I've worked on research related to"
      }
      <NewTab href={sandboxLink}>physics, climate, and education</NewTab>{
        " and contributed to research on"
      }
      <NewTab href={ffRustLink}>cryptography</NewTab>{" and"}
      <NewTab href={vacLabLink}>visual computing</NewTab>{"."}
    </div>
    <div class="text-block">
      I'd love to chat. Reach out to me at any of these places!
    </div>
    <div class="grid grid-cols-[auto_1fr] gap-x-3 gap-y-0">
      <ContactLink
        icon={EnvelopeIcon}
        href="mailto:me@ethandenny.dev"
        label="me@ethandenny.dev"
      />
      <ContactLink
        icon={FileIcon}
        href="https://ethandenny.dev/resume"
        label="Resume"
      />
      <ContactLink
        icon={GithubIcon}
        href="https://github.com/EthanDenny"
        label="Github"
      />
      <ContactLink
        icon={LinkedInIcon}
        href="https://www.linkedin.com/in/ethan-denny-709/"
        label="LinkedIn"
      />
    </div>
  </div>
</BaseLayout>
