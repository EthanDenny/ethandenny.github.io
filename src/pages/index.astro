---
import BaseLayout from "../layouts/BaseLayout.astro";
import NewTab from "../components/NewTab.astro";

import "../styles/global.css";

const softwareLink = "https://github.com/EthanDenny";
const musicLink =
  "https://music.apple.com/ca/playlist/ten-really-good-songs/pl.u-V9D7mX9hBKWDNE7";
const gamesLink = "https://steamcommunity.com/id/thedenny709";
const programmingLink = "https://github.com/EthanDenny/flip";
const webDevLink = "https://github.com/EthanDenny/connect2";

const schoolLink = "https://www.mun.ca/";
const sandboxLink = "https://github.com/EthanDenny/sandbox";
const vacLabLink =
  "https://www.linkedin.com/posts/ethan-denny-709_machinelearning-computerscience-python-activity-7071956327891095552-Awnm";
const ffRustLink =
  "https://www.linkedin.com/posts/ethan-denny-709_im-happy-to-share-that-in-addition-to-my-activity-7200540631662772224-JMbU?utm_source=share&utm_medium=member_desktop";

import contacts from "../data/contacts.json";
---

<BaseLayout title={"Home"}>
  <div class="flex flex-col gap-4">
    <div class="text-block">
      I like building <NewTab href={softwareLink}>software</NewTab>, listening
      to <NewTab href={musicLink}>music</NewTab>, playing <NewTab
        href={gamesLink}>games</NewTab
      >, and learning about <NewTab href={webDevLink}>web development</NewTab> and
      <NewTab href={programmingLink}>programming languages</NewTab>.
    </div>
    <div class="text-block">
      Right now, I'm pursuing my bachelor's degree in computer science at <NewTab
        href={schoolLink}
        >Memorial University of Newfoundland and Labrador</NewTab
      >, where I'm working on research related to <NewTab href={sandboxLink}
        >physics, climate, and education</NewTab
      >. Previously, I've also contributed to research on <NewTab
        href={ffRustLink}>cryptography</NewTab
      > and
      <NewTab href={vacLabLink}>visual computing</NewTab>.
    </div>
    <div class="text-block">
      I'd love to chat. Reach out to me at any of these places!
    </div>
    <div class="grid grid-cols-[auto_1fr] gap-x-4 gap-y-0">
      {
        contacts.map(({ name, icon, link }) => (
          <>
            <i
              class={`${icon} flex items-center justify-center text-center leading-none`}
            />
            <div>
              <NewTab href={link}>{name}</NewTab>
            </div>
          </>
        ))
      }
    </div>
  </div>
</BaseLayout>
