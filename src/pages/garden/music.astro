---
import BaseHead from "../../components/BaseHead.astro";
import music from "../../data/music.json";
import "../../styles/global.css";

const shuffledMusic = music.sort(() => Math.random() - 0.5);
---

<BaseHead title="Digital Garden" />

<body>
  <h1 class="p-4">Music ğŸ§</h1>

  <div class="grid grid-cols-4 place-items-center gap-4 p-4">
    {
      shuffledMusic.map(({ name, artist, link, cover }) => (
        <a href={link} title={`"${name}" by ${artist}`}>
          <img src={cover} alt={name} />
        </a>
      ))
    }
  </div>
</body>
